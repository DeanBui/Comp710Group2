<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90CAF9"
    tools:context="com.example.duyqu.comp710group2.MainActivity">

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="166dp"
        android:text="UserName"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtUserName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="149dp" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="115dp"
        android:text="Password"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="11dp"
        android:onClick="login"
        android:text="Log in" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnLogin"
        android:onClick="register"
        android:text="Register" />

    <TextView
        android:id="@+id/textOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextOccupation"
        android:layout_alignParentStart="true"
        android:text="Status"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/editTextOccupation"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtPassword"
        android:layout_marginTop="-115dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:background="#90CAF9"
        app:srcCompat="@drawable/Logo" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtUserName"
        android:layout_marginTop="-166dp"
        android:ems="10"
        android:inputType="textPassword" />
</RelativeLayout>
